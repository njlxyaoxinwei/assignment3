<% provide(:title, 'Showing User') %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name%>
			</h1>
		Email: <%= @user.email %><br />
		</section>
	</aside>
	<div class="span8">
		<% if @user.posts.any? %>
			<h3>Posts (<%= @user.posts.count %>)</h3>
			<ol class="posts">
				<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>	
</div>
