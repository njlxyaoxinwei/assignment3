<% provide(:title, 'Showing User') %>
<div class="row">
	<aside class="span5">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name%>
			</h1>
		Email: <%= @user.email %><br />
		</section>
		<section>
			<% if @user.comments.any? %>
				<h3> Comments (<%= @user.comments.count %>)</h3>
				<ol class="comments">
					<%= render 'comments/comment_user' %>
				</ol>
				<%= will_paginate @comments %>
			<% end %>	
		</section>
	</aside>
	<div class="span7">
		<% if @user.posts.any? %>
			<h3>Posts (<%= @user.posts.count %>)</h3>
			<ol class="posts">
				<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>	
</div>
